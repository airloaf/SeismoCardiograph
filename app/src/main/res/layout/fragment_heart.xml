<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_fragment_heart_number"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-1dp"
        android:text="700"
        android:textAlignment="textEnd"
        android:textColor="#F3F315"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/iv_fragment_heart_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fragment_heart_BPM_STATIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="33dp"
        android:text="BPM"
        android:textColor="#F3F315"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_fragment_heart_number"
        app:layout_constraintLeft_toRightOf="@+id/tv_fragment_heart_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/iv_fragment_heart_icon"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/heart_bpm"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tv_fragment_heart_description"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="Average"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/iv_fragment_heart_icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/iv_fragment_heart_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>